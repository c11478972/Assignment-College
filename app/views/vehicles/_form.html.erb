<%= form_for(@vehicle) do |f| %>
	<% if @vehicle.errors.any? %>
			<div id="error_explanation">
			  <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

			  <ul>
			  <% @vehicle.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			  <% end %>
			  </ul>
			</div>
	<% end %>

  <div class="field">
    <%= f.label :vehicletype %><br />
    <%= f.select :vehicletype, ["Car-Hatchback","Car-Sedan","Car-Sports","Car-Off Road","Van","Bicycle-Race","Bicycle-Mountain","Bicycle-Road"] %>
  </div>
  <div class="field">
    <%= f.label :model %><br />
    <%=  f.select :model, ["BMW/Mini","Citroen","Volkswagen","Bugatti","Audi","Skoda","Nissan","Toyota","Mercedes","Ford","Giant(Bicycle)"] %>
  </div>
  <div class="field">
    <%= f.label :registration_num %><br />
    <%= f.text_field :registration_num %>
  </div>
  <div class="field">
	<% customer = @current_customer %>
    <%= f.label :customer_id %><br />
    <%= f.collection_select :customer_id, Customer.all, :id, :email%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
